<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="720.0" prefWidth="1280.0" stylesheets="/com/example/doangamecolat/css/main-view.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.doangamecolat.controller.MenuController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@../img/background.png" />
         </image>
      </ImageView>

      <VBox alignment="BOTTOM_CENTER" spacing="0.0" prefHeight="720.0" prefWidth="1280.0">
         <children>
            <HBox alignment="CENTER" spacing="20.0" prefHeight="100.0" prefWidth="1280.0">
               <children>
                  <JFXButton fx:id="btnStartGame" onAction="#onPlayBtn" prefHeight="50.0" prefWidth="200.0" styleClass="modern-button" text="Bắt đầu" />
                  <JFXButton fx:id="btnSettings" onAction="#onSettingsBtn" prefHeight="50.0" prefWidth="200.0" styleClass="modern-button" text="Luật chơi" />
                  <JFXButton fx:id="btnExit" onAction="#onExitBtn" prefHeight="50.0" prefWidth="200.0" styleClass="modern-button" text="Thoát" />
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>

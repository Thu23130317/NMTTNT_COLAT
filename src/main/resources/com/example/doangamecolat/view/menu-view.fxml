<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="434.0" stylesheets="/com/example/doangamecolat/css/main-view.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.doangamecolat.controller.MenuController">
   <children>
      <ImageView fitHeight="434.0" fitWidth="1024.0" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@../img/background_fantasy.jpg" />
         </image>
      </ImageView>

      <VBox alignment="CENTER" spacing="40.0">
         <children>
            <ImageView fitHeight="200.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/logo_othello.png" />
               </image>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ImageView>

            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <JFXButton fx:id="btnStartGame" onAction="#onPlayBtn" prefHeight="60.0" prefWidth="250.0" styleClass="menu-button" text="START GAME" />

                  <JFXButton fx:id="btnSettings" onAction="#onSettingsBtn" prefHeight="60.0" prefWidth="250.0" styleClass="menu-button" text="SETTINGS" />

                  <JFXButton fx:id="btnExit" onAction="#onExitBtn" prefHeight="60.0" prefWidth="250.0" styleClass="menu-button" text="EXIT" />
               </children>
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
